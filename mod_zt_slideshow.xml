<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
    <name>MOD_ZTSLIDESHOW</name>
    <author>ZooTemplate</author>
    <creationDate>April 2, 2015</creationDate>
    <copyright>ZooTemplate.Com</copyright>
    <authorEmail>support@ZooTemplate.com</authorEmail>
    <authorUrl>www.ZooTemplate.com</authorUrl>
    <version>2.0.0</version>
    <description>MOD_ZTSLIDESHOW_XML_DESCRIPTION</description>

    <files>
        <filename module="mod_zt_slideshow">bootstrap.php</filename>
        <filename module="mod_zt_slideshow">mod_zt_slideshow.php</filename>
        <folder>assets</folder>
		<folder>formfields</folder>
		<folder>helper</folder>
		<folder>libraries</folder>
		<folder>tmpl</folder>
    </files>

    <languages folder="languages">
        <language tag="en-GB">languages/en-GB.mod_zt_slideshow.ini</language>
        <language tag="en-GB">languages/en-GB.mod_zt_slideshow.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/modules/mod_zt_slideshow/formfields">
                <field name="slides" type="slides" label="" description="JFIELD_ACCESS_DESC" />
            </fieldset>
            <fieldset name="advanced">
                <field name="pagination" type="list" default="0" label="Show pagination" description="">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="navigation" type="list" default="0" label="Show navigation" description="">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="display_time" type="text" default="" label="Display time" description="" size="10" />
                <field name="transition_duration" type="text" default="" label="Transition Duration" description="" size="10" />
            </fieldset>
        </fields>
    </config>
</extension>